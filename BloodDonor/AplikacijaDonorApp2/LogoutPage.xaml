<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AplikacijaDonorApp2.Views.LogoutPage"
             BackgroundColor="#FCA7A7"
             NavigationPage.HasNavigationBar="False">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="30" Spacing="20">

        <Image Source="drop_character.png"
           HeightRequest="150"
           WidthRequest="150"
           HorizontalOptions="Center" />

        <Label Text="You have successfully logged out."
               FontSize="20"
               HorizontalTextAlignment="Center"
               TextColor="Black" />

        <Label Text="Thank you for using the BloodDonor app. Your support saves lives. See you next time!"
               FontSize="14"
               HorizontalTextAlignment="Center"
               TextColor="Black" />
    </StackLayout>
</ContentPage>
