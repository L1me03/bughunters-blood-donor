<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AplikacijaDonorApp2.Views.LoginPage"
             BackgroundColor="#FCA7A7"
             NavigationPage.HasNavigationBar="False">

    <StackLayout x:Name="MainStack" Padding="30" Spacing="15" VerticalOptions="Center">

        <Image Source="drop_character.png"
               HeightRequest="300"
               WidthRequest="300"
               HorizontalOptions="Center"
               Margin="0,0,0,0"/>

        <!-- E-mail label + entry -->
        <Label Text="E-mail:"
               FontSize="14"
               TextColor="Black"
               Margin="5,0,0,0"
               HorizontalOptions="Center"/>

        <Frame CornerRadius="10" Padding="0" HasShadow="False" BackgroundColor="White">
            <Entry x:Name="emailEntry"
                   
                   BackgroundColor="Transparent"
                   HeightRequest="50"
                   FontSize="14"/>
        </Frame>

        <!-- Password label + entry -->
        <Label Text="Password:"
               FontSize="14"
               TextColor="Black"
               Margin="5,10,0,0"
               HorizontalOptions="Center"/>
               
        <Frame CornerRadius="10" Padding="0" HasShadow="False" BackgroundColor="White">
            <Entry x:Name="passwordEntry"
                    
                   IsPassword="True"
                   BackgroundColor="Transparent"
                   HeightRequest="50"
                   FontSize="14"/>
        </Frame>

        <!-- Login button -->
        <Button Text="LOGIN"
                BackgroundColor="#B22222"
                TextColor="White"
                CornerRadius="25"
                FontAttributes="Bold"
                FontSize="16"
                HeightRequest="50"
                Clicked="OnLoginClicked"/>

        <!-- Links -->
        <Label Text="Forgot your password?"
               HorizontalOptions="Center"
               FontSize="12"
               TextColor="Gray"
               Margin="0,10,0,0"/>

        <Label Text="Don't have an account? Sign up"
               HorizontalOptions="Center"
               FontSize="12"
               TextColor="DarkBlue"
               TextDecorations="Underline"
               Margin="0,5,0,0"/>
    </StackLayout>
</ContentPage>
