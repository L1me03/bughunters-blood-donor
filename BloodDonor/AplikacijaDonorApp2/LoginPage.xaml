<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AplikacijaDonorApp2.Views.LoginPage"
             BackgroundColor="#FCA7A7"
             NavigationPage.HasNavigationBar="False">

    <StackLayout x:Name="MainStack" Padding="30" Spacing="15">
        <Image Source="drop_character.png" HeightRequest="100" HorizontalOptions="Center"/>
        <Entry x:Name="emailEntry" Placeholder="E-mail" BackgroundColor="White" />
        <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" BackgroundColor="White" />
        <Button Text="LOGIN" BackgroundColor="#B22222" TextColor="White" CornerRadius="25" Clicked="OnLoginClicked"/>
        <Label Text="Forgot your password?" HorizontalOptions="Center" FontSize="12"/>
        <Label Text="Don't have an account? Sign up"
               HorizontalOptions="Center"
               FontSize="12"
               TextDecorations="Underline"
               TextColor="Blue"/>
    </StackLayout>
</ContentPage>
