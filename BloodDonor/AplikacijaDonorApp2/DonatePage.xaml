<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AplikacijaDonorApp2.Views.DonatePage"
             BackgroundColor="#FCA7A7"
             NavigationPage.HasNavigationBar="False">

    <ScrollView>
        <StackLayout Padding="30" Spacing="20" VerticalOptions="Center">

            

            <Label Text="Enter your information to make a donation:"
                   FontSize="16" HorizontalTextAlignment="Center" />

            
            <Frame CornerRadius="25" Padding="10" BackgroundColor="White" HasShadow="False">
                <Entry Placeholder="First Name:" BackgroundColor="Transparent"/>
            </Frame>

            
            <Frame CornerRadius="25" Padding="10" BackgroundColor="White" HasShadow="False">
                <Entry Placeholder="Last name:" BackgroundColor="Transparent"/>
            </Frame>

            
            <Frame CornerRadius="25" Padding="10" BackgroundColor="White" HasShadow="False">
                <Entry Placeholder="Enter the hospital:" BackgroundColor="Transparent"/>
            </Frame>

            
            <Frame CornerRadius="25" Padding="10" BackgroundColor="White" HasShadow="False">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Entry Placeholder="DD/MM/YY"
                           BackgroundColor="Transparent"
                           Grid.Column="0"/>
                    <Label Text="ðŸ“…"
                           FontSize="18"
                           VerticalOptions="Center"
                           Grid.Column="1"
                           Margin="10,0"/>
                </Grid>
            </Frame>

            <!-- Drop character image -->
            <Image Source="drop_character.png" HeightRequest="80" HorizontalOptions="Center"/>

            <!-- Confirm button -->
            <Button Text="CONFIRM"
                    BackgroundColor="#B22222"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="30"
                    HeightRequest="50"/>

            <!-- Footer -->
            <Label Text="BugHunters Â©" FontSize="12" HorizontalOptions="Center" TextColor="Black"/>

        </StackLayout>
    </ScrollView>
</ContentPage>

