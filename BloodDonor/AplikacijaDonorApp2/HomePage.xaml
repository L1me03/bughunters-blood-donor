<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AplikacijaDonorApp2.Views.HomePage"
             BackgroundColor="#FCA7A7"
             NavigationPage.HasNavigationBar="False">

    <StackLayout Padding="20">
        <Label Text="HI Marko Markovic"
               FontSize="20"
               FontAttributes="Bold"
               TextColor="Black"/>
        <Label Text="We're grateful to have you as part of this journey..."
               FontSize="14"
               Margin="0,5"/>

        <Grid ColumnSpacing="10" RowSpacing="10" Margin="0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Grid.Column="0" Stroke="Red" Background="Red" Padding="10">
                <Label Text="A+" TextColor="White" HorizontalOptions="Center"/>
            </Border>
            <Border Grid.Row="0" Grid.Column="1" Stroke="Red" Background="Red" Padding="10">
                <Label Text="TOTAL DONATIONS: 25" TextColor="White" HorizontalOptions="Center"/>
            </Border>
            <Border Grid.Row="1" Grid.Column="0" Stroke="Red" Background="Red" Padding="10">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnDonorCardTapped"/>
                </Border.GestureRecognizers>
                <Label Text="MARKO MARKOVIC" TextColor="White" HorizontalOptions="Center"/>
            </Border>

            <Border Grid.Row="1" Grid.Column="1" Stroke="Red" Background="Red" Padding="10">
                <Label Text="YOU CAN'T DONATE YET." TextColor="White" HorizontalOptions="Center"/>
            </Border>
        </Grid>

        <Image Source="drop_character.png" HeightRequest="100" HorizontalOptions="Center"/>
        <Label Text="BugHunters Â©" FontSize="10" HorizontalOptions="Center"/>
    </StackLayout>
</ContentPage>
