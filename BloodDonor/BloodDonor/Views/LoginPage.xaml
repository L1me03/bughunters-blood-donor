<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BloodDonor.Views.LoginPage"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">
            <Image Source="bughunterslogo.png"
                   WidthRequest="150"
                   HeightRequest="150"
                   HorizontalOptions="Center" />

            <Label Text="Welcome" 
                   FontSize="32" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" 
                   TextColor="#e53935" />

            <Label Text="Donating blood is an act of solidarity. Join the effort and save lives."
                   FontSize="16"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   TextColor="Gray"
                   Margin="0,0,0,20" />

            <Frame CornerRadius="12" Padding="10" BackgroundColor="#f5f5f5">
                <Entry Placeholder="Email"
                       BackgroundColor="Transparent"
                       TextColor="Black" />
            </Frame>

            <Frame CornerRadius="12" Padding="10" BackgroundColor="#f5f5f5">
                <Entry Placeholder="Password" 
                       IsPassword="True"
                       BackgroundColor="Transparent"
                       TextColor="Black" />
            </Frame>

            <Button Text="Login" 
                    Clicked="OnLoginClicked"
                    BackgroundColor="#e53935" 
                    TextColor="White"
                    CornerRadius="12"
                    HeightRequest="50" />

            <HorizontalStackLayout HorizontalOptions="Center">
                <Label Text="Don't have an account?" />
                <Label x:Name="RegisterLabel"
                       Text=" Register"
                       TextColor="#e53935"
                       FontAttributes="Bold" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>