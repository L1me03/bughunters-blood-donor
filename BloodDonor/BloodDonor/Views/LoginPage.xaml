<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BloodDonor.Views.LoginPage"
    BackgroundColor="White">

    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
        <Image Source="bughunterslogo.png" HeightRequest="100" HorizontalOptions="Center"/>

        <Entry Placeholder="Email" Keyboard="Email" />
        <Entry Placeholder="Password" IsPassword="True" />

        <Button Text="Login" BackgroundColor="#B71C1C" TextColor="White" />

        <Label Text="Don't have an account?" HorizontalOptions="Center" />
        <Button Text="Register" BackgroundColor="Transparent" TextColor="#B71C1C" />
    </VerticalStackLayout>
</ContentPage>
