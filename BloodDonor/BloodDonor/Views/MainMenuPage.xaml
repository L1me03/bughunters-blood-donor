<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BloodDonor.Views.MainMenuPage"
             BackgroundColor="White">

    <Grid Padding="30" RowSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Text="Main Menu"
               FontSize="32"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#e53935"
               Grid.Row="0"
               Margin="0,20,0,40" />

        <Grid Grid.Row="1" RowSpacing="20" ColumnSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Text="Profile"
                    BackgroundColor="#f5f5f5"
                    TextColor="Black"
                    CornerRadius="12"
                    HeightRequest="120"
                    FontAttributes="Bold"
                    Grid.Row="0" Grid.Column="0" />

            <Button Text="Donate"
                    BackgroundColor="#f5f5f5"
                    TextColor="Black"
                    CornerRadius="12"
                    HeightRequest="120"
                    FontAttributes="Bold"
                    Grid.Row="0" Grid.Column="1" />

            <Button Text="History"
                    BackgroundColor="#f5f5f5"
                    TextColor="Black"
                    CornerRadius="12"
                    HeightRequest="120"
                    FontAttributes="Bold"
                    Grid.Row="1" Grid.Column="0" />

            <Button Text="Logout"
                    BackgroundColor="#e53935"
                    TextColor="White"
                    CornerRadius="12"
                    HeightRequest="120"
                    FontAttributes="Bold"
                    Clicked="OnLogoutClicked"
                    Grid.Row="1" Grid.Column="1" />
        </Grid>
    </Grid>
</ContentPage>
