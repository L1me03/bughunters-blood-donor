<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BloodDonor.Views.MainPage"
             Title="BloodDonor">

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="20">

            <Image
                Source="bughunterslogo.png"
                HeightRequest="150"
                Aspect="AspectFit"
                HorizontalOptions="Center" />

            <Label
                Text="Welcome to BloodDonor!"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Center" />

            <Label
                Text="Be a hero. Save lives. Donate blood."
                FontSize="16"
                HorizontalOptions="Center"
                TextColor="Gray" />

            <Button
                Text="Go to Login"
                Clicked="OnLoginClicked"
                BackgroundColor="#B71C1C"
                TextColor="White"
                CornerRadius="10"
                Padding="10"
                HorizontalOptions="Fill" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

